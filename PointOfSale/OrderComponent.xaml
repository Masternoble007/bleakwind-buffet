<UserControl x:Class="PointOfSale.OrderComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Order" TextAlignment="Right" FontWeight="Bold" FontSize="18"/>
        <TextBlock Text="# " Grid.Column="1" TextAlignment="Left" FontSize="18" FontWeight="Bold" Margin="5, 0, 0, 0"/>
        <TextBlock Text="Subtotal: " Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        <TextBlock Text="Tax: " Grid.Row="3" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        <TextBlock Text="Total: " Grid.Row="4" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold"/>
    </Grid>
</UserControl>
