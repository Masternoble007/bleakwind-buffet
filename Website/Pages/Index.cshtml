@page
@model Website.Pages.IndexModel
@{
    ViewData["Title"] = "HomeScreen";
}

<h1>Welcome to Bleakwind Buffet</h1>

<p>
    We at Bleakwind Buffet are proud to bring you authentic fantasy meals
    straight from the world of Skyrim. Shake the blood off your sword and sake
    your thirst with one of our old-fashioned sailor sodas. Hack into a Smokehouse
    Skeleton with your dagger. Or vanquish the the mighty Thalmor Triple Burger!
    You’ve had a hard adventure and earned your loot, so spend it with us!.
</p>

<div class="fullmenu">

    <div id="search">
        <input type="text" name="SearchTerms" value="@Model.searchTerms" />
        <input type="submit" value="Search" />
    </div>

    <form method="post">
        <h2>Filters</h2>
        <div class="set-group">
            <h4>Categories</h4>
            <label>
                <input type="checkbox" class="menu-category" value="Entrees" name="menuCategory"
                       checked="@Model.Categories.Contains("Entrees")" />
                Entrees
            </label>
            <label>
                <input type="checkbox" class="menu-category" value="Sides" name="menuCategory"
                       checked="@Model.Categories.Contains("Sides")" />
                Sides
            </label>
            <label>
                <input type="checkbox" class="menu-category" value="Drinks" name="menuCategory"
                       checked="@Model.Categories.Contains("Drinks")" />
                Drinks
            </label>
        </div>
        <div class="set-group">

            <h4>Calories</h4>
            <div>
                Between
                <input name="calmin" type="number" min="0" step="0.1" placeholder="min" />
                and
                <input name="calmax" type="number" min="0" step="0.1" placeholder="max" />
            </div>
        </div>
        <div class="set-group">

            <h4>Price</h4>
            <div>
                Between
                <input name="PriceMin" type="number" min="0" step="0.1" id="priceMin" placeholder="min" />
                and
                <input name="PriceMax" type="number" min="0"  step="0.1" id="priceMax" placeholder="max" />
            </div>
        </div>
    </form>


    <div class="regular-menu-part">
        <h2>Entrees</h2>
        <div class="entree-menu-list">
            @foreach (var item in Model.Entrees)
            {
                <div class="menu-item">
                    <div class="menu-description"><h3>@item.Description</h3></div>
                    <div class="entree-name">Entree</div>
                    <div>@item.Price</div>
                    <div>@item.Calories</div>
                </div>
            }
        </div>


        <h2>Sides</h2>
        <div class="side-menu-list">
            @foreach (var item in Model.Sides)
            {
            <div class="menu-item">
                <div class="menu-description"><h3>@item.Description</h3></div>
                <div class="side-name">Entree</div>
                @foreach (var size in Model.Sizes)
                {
                    item.Size = size;
                    <div>@item.Price</div>
                    <div>@item.Calories</div>
                }
            </div>
            }
        </div>

        <h2>Drinks</h2>
        <div class="drink-menu-list">
            @foreach (var item in Model.Drinks)
            {
            <div class="menu-item">
                <div class="menu-description"><h3>@item.Description</h3></div>
                <div class="drink-name">Entree</div>
                @foreach (var size in Model.Sizes)
                {
                    item.Size = size;
                    <div>@item.Price</div>
                    <div>@item.Calories</div>
                }
            </div>
            }
        </div>
    </div>

    
</div>
<div class="clearfix" ?></div>





